    background-image: url(https://static9.depositphotos.com/1177973/1131/i/600/depositphotos_11315146-stock-photo-hotel-swimming-pool-with-sunny.jpg);
}

header h1 {
    text-align: center;
    font-size: 40px;
    color: white;
}

