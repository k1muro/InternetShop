.flexing
{
    display:flex;
    flex-wrap:wrap;
    width:700px;
    height:auto;
    
}
.child
{
     background-color: rgb(183, 227, 232);
     width:200px;
     height:290px;
     margin:10px;
     border: 2px rgb(185, 230, 237);
     border-radius:25px;
     /*display: flex;
     flex-wrap: wrap;*/

}
div h1 {font-size:15px;}
div h2 {font-size:15px;}
.p1{font-size:15px;color:white;}
.p2{font-size:12px;color:white;}

</style>
<header>
        <h1>Swimming Shop</h1>
    </header>
    <nav>
        <a href="#">Home</a>
    @if (ViewBag.user == null)
    {
        <form method="get" style="padding:0; margin:0;">
            <a asp-action="Registration" style="float:right;" >Login/SignUp</a>
        </form>
        
    }
    else
    {
        @if(ViewBag.user.RoleId==1){
        <form method="get" asp-action="CRUD"> 
          <button type="submit" style="float:right;"> Admin Panel</button>
          </form>}
           
    }

    </nav>
    <main>
        <section>
            <h2>Products</h2>
            <center><div class="flexing"> 
            @foreach(var item in ViewBag.products)
            {
                <div class="child">
                    <p class="p1">@item.ProductName</p><br><br>
                    <center><p name="p2">@item.Info</p></center>
                     <center><p>Amount:@item.Amount</p></center>
                     <center><p>@item.Price₴</p></center>
                        @if (ViewBag.user != null)
                        {
                            <form>
                            <button>To cart</button>
                            </form>
                            <form method="get" asp-action="InfoPage">
                                <button type="submit">Info</button>
                            </form>
                        }
                    </div> 
            }
            
            </div></center>
        </section>
        
        
        <footer>
            <h3></h3>      
            <center><a href="http://www.instagram.com/voleexm" target="_blank" rel="noopener noreferrer">Instagram</a></center>
        </footer>
    </main>
